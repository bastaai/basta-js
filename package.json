{
  "name": "@bastaai/basta-js",
  "version": "1.0.0-alpha.1",
  "description": "A lightweight package for client-side apps to easily access and manage data from Basta's online auctions, providing a seamless integration for creating engaging auction experiences.",
  "author": "Basta (https://www.basta.ai)",
  "homepage": "https://docs.basta.ai",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "tsup",
    "postbuild": "node scripts/prepare-package.js && cp .npmrc dist/.npmrc",
    "format": "biome format",
    "format:fix": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "client:update": "node scripts/update-client.js",
    "manage:update": "dotenv -e .env -- node scripts/update-management.js",
    "publish": "cd dist && npm publish --tag alpha --access public",
    "preexample:vite": "pnpm -C examples/vite install",
    "example:vite": "pnpm -C examples/vite dev"
  },
  "dependencies": {
    "ts-pattern": "5.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@genql/cli": "6.3.3",
    "@types/react": "19",
    "dotenv-cli": "10.0.0",
    "graphql-ws": "6.0.6",
    "prompts": "2.4.2",
    "react": "19",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "urql": "5.0.1"
  },
  "peerDependencies": {
    "graphql-ws": "^6.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "urql": "^5.0.0"
  },
  "keywords": [
    "Basta.ai",
    "Basta SDK"
  ]
}
